{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="page-header">
        <h1> Mon profile </h1>
    </div>
    <div class="fos_user_user_show col-sm-10">
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}

    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans} }) }}
            {{ form_errors(form.current_password) }}
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.new_password'|trans } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.new_password_confirmation'|trans } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" />
            <a class="btn btn-info" href="{{ path('fos_user_profile_show') }}">Cancel</a>
        </div>
    </div>

    {{ form_end(form) }}
    </div>
</div>